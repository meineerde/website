#!/usr/bin/env ruby

preprocess do
  # authors may unpublish items by setting meta attribute publish: false
  items.delete_if { |item| item[:publish] == false }

  copy_static
  # update_twitter
end

compile '/assets/css/_*' do
  # Don't compile partials
end

compile '/assets/css/*' do
  filter :sass, {
    :load_paths => [Dir.pwd+"/content/css"],
    :full_exception => true,
    :style => :compressed,
    :syntax => :scss
  }
end

compile '*' do
  # item[:extension] returns 'html.erb' for multi-dotted filename
  ext = item[:extension].nil? ? nil : item[:extension].split('.').last
  
  unless rep.binary?
    filter :erb

    case ext
    when 'html'
    when 'textile'
      filter :redcloth
    when 'md','markdown'
      filter :bluecloth
    when 'haml', nil
      filter :haml
    else
      raise "Filter is not configured for #{item.identifier} in Rules file."
    end
    
    layout item[:layout] || 'blog'
    layout 'default'
  end
end

route '/assets/css/*' do
  unless item.identifier.include? '/_'
    # only render non-partial css files
    item.identifier.gsub(/\/$/, '') + '.css'
  end
end

route '*' do
   if item.binary?
     item.identifier.chop + '.' + item[:extension]
   else
     item.identifier + 'index.html'
    end
end

layout '*', :haml, {
  :ugly => :true
}
