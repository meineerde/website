#!/usr/bin/env ruby

preprocess do
  # authors may unpublish items by setting meta attribute publish: false
  items.delete_if { |item| item[:publish] == false }

  copy_static
  # update_twitter
end

compile '/css/_*' do
  # Don't compile partials
  # 
end

compile '/css/*' do
  filter :sass, {
    :load_paths => [Dir.pwd+"/content/css"],
    :full_exception => true,
    :style => :compressed,
    :syntax => :scss
  }
end

compile '*' do
  unless rep.binary?
    case item[:extension]
    when 'html'
      filter :erb
    when 'textile'
      filter :erb
      filter :redcloth
    when 'md','markdown'
      filter :erb
      filter :bluecloth
    end
    
    layout item[:layout] || 'blog'
    layout 'default'
  end
end

route '/css/*' do
  unless item.identifier.include? '/_'
    item.identifier.gsub(/\/$/, '') + '.css'
  end
end

route '*' do
   if item.binary?
     item.identifier.chop + '.' + item[:extension]
   else
     item.identifier + 'index.html'
    end
end

layout '*', :haml, :format => :html5